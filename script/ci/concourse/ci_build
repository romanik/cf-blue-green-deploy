#!/bin/bash
set -e -x

export GOPATH=$PWD
export PLUGIN_VERSION=$(cat version/number)

pushd src/github.com/romanik/cf-blue-green-deploy
  . script/with_env
  ./script/build
popd

tar -C src/github.com/romanik/cf-blue-green-deploy/artefacts -zcvf blue-green-deploy-"$PLUGIN_VERSION.tar.gz" .

mv blue-green-deploy-"$PLUGIN_VERSION.tar.gz" artefacts

